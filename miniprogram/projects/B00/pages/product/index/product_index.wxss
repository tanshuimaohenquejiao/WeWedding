@import "../../../style/skin.wxss";

 

.product-list {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	padding: 10rpx 0rpx;
}

.product-list .item {
	width: 100%;
	display: flex;
	align-items: flex-start;
	justify-content: flex-start;
	position: relative;
	padding: 15rpx 0; 
	background-color: #fff;
	margin-bottom:10rpx;
}

.product-list .item image {
	width: 200rpx;
	height: 210rpx;
	border-radius: 10rpx;
	margin-right: 20rpx; 
	margin-left: 20rpx; 
}

.product-list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	justify-content: flex-start;
	height: 210rpx;
}

.product-list .item .right .line1 {
	width: 100%;
	font-size: 32rpx;
	color: #000;
	font-weight: bold;
}

.product-list .item .right .line2 {
	width: 100%;
	font-size: 34rpx;
	color: var(--projectColor);
	font-weight: bold;
	flex: 1;
	padding-top:10rpx;
}

.product-list .item .right .line2 .price {
	font-size: 26rpx;
	font-weight: normal;
	color: #aaa;
	text-decoration: line-through;
}

.product-list .item .right .line3 {
	font-size: 28rpx;
	font-weight: normal;
	color: #aaa;
	line-height: 1.5;
	width:330rpx;
}


.product-list .item .appt {
	position: absolute;
	bottom: 20rpx;
	right: 15rpx;
	width: 130rpx;
	background-color: var(--projectColor);
	line-height: 2.1;
	border-radius: 25rpx;
	text-align: center;
	color: #fff;
	font-size: 24rpx;
}


.shadow-img {
	box-shadow: 6rpx 11rpx 8rpx rgba(228, 157, 195, 0.3);
}